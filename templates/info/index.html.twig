{% extends 'base.html.twig' %}

{% block title %}Liste des Infos - {{ parent() }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-info-circle text-primary me-2"></i>Liste des Informations</h1>
</div>

{% if totalItems == 0 %}
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        Aucune information n'a été trouvée. Le bot n'a pas encore collecté de données.
    </div>
{% else %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">
            {{ totalItems }} information{{ totalItems > 1 ? 's' : '' }} trouvée{{ totalItems > 1 ? 's' : '' }}
            (page {{ currentPage }} sur {{ totalPages }})
        </p>
    </div>
    <div class="row">
        {% for info in infos %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    {% if info.imageUrl %}
                        <img src="{{ info.imageUrl }}" class="card-img-top" alt="Image" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <p class="card-text">{{ info.description|length > 150 ? info.description|slice(0, 150) ~ '...' : info.description }}</p>
                        
                        <div class="mt-auto">
                            {% if info.url %}
                                <a href="{{ info.url }}" target="_blank" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="bi bi-link-45deg"></i> Lien
                                </a>
                            {% endif %}
                            <a href="{{ path('app_info_show', {'id': info.id}) }}" class="btn btn-primary btn-sm">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <small>
                            <i class="bi bi-calendar"></i>
                            {% if info.publishedAt %}
                                Publié le {{ info.publishedAt|date('d/m/Y H:i') }}
                            {% else %}
                                Créé le {{ info.createdAt|date('d/m/Y H:i') }}
                            {% endif %}
                        </small>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Pagination -->
    {% if totalPages > 1 %}
        <nav aria-label="Navigation des pages">
            <ul class="pagination justify-content-center">
                <!-- Bouton Précédent -->
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_info_index', {'page': currentPage - 1}) }}">
                            <i class="bi bi-chevron-left"></i> Précédent
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="bi bi-chevron-left"></i> Précédent
                        </span>
                    </li>
                {% endif %}

                <!-- Numéros de pages -->
                {% set startPage = max(1, currentPage - 2) %}
                {% set endPage = min(totalPages, currentPage + 2) %}

                {% if startPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_info_index', {'page': 1}) }}">1</a>
                    </li>
                    {% if startPage > 2 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endif %}

                {% for page in startPage..endPage %}
                    {% if page == currentPage %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_info_index', {'page': page}) }}">{{ page }}</a>
                        </li>
                    {% endif %}
                {% endfor %}

                {% if endPage < totalPages %}
                    {% if endPage < totalPages - 1 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_info_index', {'page': totalPages}) }}">{{ totalPages }}</a>
                    </li>
                {% endif %}

                <!-- Bouton Suivant -->
                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_info_index', {'page': currentPage + 1}) }}">
                            Suivant <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">
                            Suivant <i class="bi bi-chevron-right"></i>
                        </span>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endif %}
{% endblock %}
